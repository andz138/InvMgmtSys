@model IEnumerable<InventoryManagementSystem.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastRestockDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastRestockDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InventoryEntryID" class="btn btn-sm btn-outline-warning me-1">
                    <i class="fa-solid fa-pencil"></i> Edit
                </a>
                <a asp-action="Details" asp-route-id="@item.InventoryEntryID" class="btn btn-sm btn-outline-info">
                    <i class="fa fa-info-circle"></i> Details
                </a>
                <a asp-action="Delete" asp-route-id="@item.InventoryEntryID" class="btn btn-sm btn-outline-danger">
                    <i class="fa fa-trash"></i> Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
