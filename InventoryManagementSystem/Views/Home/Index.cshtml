@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center py-5" style="background-color: #f8f9fa;">
    <h1 class="display-4">Welcome to Inventory Management System</h1>
    <p class="lead">Simplify your inventory tracking with ease and precision.</p>
    <hr class="my-4">
    <p>Manage your products, suppliers, and transactions all in one place.</p>
    <a class="btn btn-primary btn-lg" asp-controller="Products" asp-action="Index" role="button">View Products</a>
    <a class="btn btn-secondary btn-lg" asp-controller="Suppliers" asp-action="Index" role="button">View Suppliers</a>
</div>

<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4">
            <i class="fas fa-box fa-3x mb-3 text-primary"></i>
            <h3>Products</h3>
            <p>Easily manage your product catalog with detailed information on stock, pricing, and SKUs.</p>
            <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index">Explore</a>
        </div>
        <div class="col-md-4">
            <i class="fas fa-truck fa-3x mb-3 text-success"></i>
            <h3>Suppliers</h3>
            <p>Keep track of your trusted suppliers and their contact details in one convenient place.</p>
            <a class="btn btn-outline-success" asp-controller="Suppliers" asp-action="Index">Explore</a>
        </div>
        <div class="col-md-4">
            <i class="fas fa-chart-line fa-3x mb-3 text-warning"></i>
            <h3>Transactions</h3>
            <p>Track all your sales and purchases to ensure accuracy and smooth business operations.</p>
            <a class="btn btn-outline-warning" asp-controller="Transactions" asp-action="Index">Explore</a>
        </div>
    </div>
</div>

