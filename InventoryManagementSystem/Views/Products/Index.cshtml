@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1 class="mb-4">Products</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="fas fa-plus"></i> Create New Product
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <th>@Html.DisplayNameFor(model => model.SKU)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.StockLevel)</th>
                    <th>@Html.DisplayNameFor(model => model.ReorderThreshold)</th>
                    <th>@Html.DisplayNameFor(model => model.Supplier)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>@Html.DisplayFor(modelItem => item.SKU)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(model => item.StockLevel)</td>
                        <td>@Html.DisplayFor(modelItem => item.ReorderThreshold)</td>
                        <td>@Html.DisplayFor(modelItem => item.Supplier.SupplierName)</td>
                        <td class="text-center">
                            <div class="mb-1"> <!-- top row of buttons -->
                                <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="fa-solid fa-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-info">
                                    <i class="fa fa-info-circle"></i> Details
                                </a>
                            </div>

                            <div> <!-- bottom row of buttons -->
                                <a asp-controller="InventoryForecast" asp-action="ForecastInventory" asp-route-productId="@item.ProductID" class="btn btn-sm btn-outline-success me-1">
                                    <i class="fa fa-chart-line"></i> Inventory Forecast
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-danger">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
